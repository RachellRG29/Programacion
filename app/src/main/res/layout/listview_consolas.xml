<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blueblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adaptadorConsolas">

    <!--Grupo para organizar  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/backgroud_agregar"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_color_ltsconsolas"
            android:backgroundTint="@color/blueblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">


            <TextView
                android:id="@+id/lblNombre"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="Nombre"
                android:textColor="@color/beige"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.202"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.065"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/lblMarca"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="Marca"
                android:textColor="@color/beige"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.117"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lineavertical"
                app:layout_constraintVertical_bias="0.031"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/lblPrecio"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/comfortaa_bold"
                android:text="$ Precio"
                android:textColor="@color/beige"
                android:textSize="20sp"
                android:paddingStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.121"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblMarca"
                app:layout_constraintVertical_bias="0.069"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/lblStock"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center|fill_horizontal"
                android:text="Stock"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.755"
                app:layout_constraintStart_toEndOf="@+id/lblPrecio"
                app:layout_constraintTop_toBottomOf="@+id/lblMarca"
                app:layout_constraintVertical_bias="0.069" />

            <TextView
                android:id="@+id/lblDescripcion"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/comfortaa_regular"
                android:gravity="center|fill_horizontal"
                android:paddingStart="10dp"
                android:text="Descripción"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.584"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblacercadescp"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/lblGanancia"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center|fill_horizontal"
                android:text="Ganancia"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.109"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblPrecio"
                app:layout_constraintVertical_bias="0.015" />

            <TextView
                android:id="@+id/lblCosto"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center|fill_horizontal"
                android:text="Costo"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.89"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblPrecio"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/lblacercadescp"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center|fill_horizontal"
                android:text="Acerca de las consolas"
                android:textColor="@color/blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.584"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblGanancia"
                app:layout_constraintVertical_bias="0.103" />

            <ImageView
                android:id="@+id/lineavertical"
                android:layout_width="260dp"
                android:layout_height="5dp"
                android:background="@color/blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblNombre"
                app:layout_constraintVertical_bias="0.0"
                app:radius="40dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/lblCodigo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:text="CÓDIGO"
            android:textColor="@color/blueblue"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/backgroud_agregar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.291"
            app:layout_constraintStart_toEndOf="@+id/btn_regresarlistimg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.081"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/btn_regresarlistimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:foreground="@drawable/icon_back"
            android:foregroundGravity="center"
            android:foregroundTint="@color/blueblue"
            app:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.037" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProductoListConsola"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/circular_background"
            android:rotation="0"
            app:layout_constraintBottom_toTopOf="@+id/backgroud_agregar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblCodigo"
            app:layout_constraintVertical_bias="0.343"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>