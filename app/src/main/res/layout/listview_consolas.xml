<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Grupo para organizar  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/backgroud_agregar"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_color_ltsconsolas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <com.appbroker.roundedimageview.RoundedImageView
                android:id="@+id/imgProductoListVista"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:foreground="@color/beige"
                android:rotation="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.693"
                app:radius="40dp" />

            <Button
                android:id="@+id/btn_regresarlistimg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foreground="@drawable/icon_back"
                android:foregroundGravity="center"
                android:foregroundTint="@color/white"
                app:backgroundTint="@color/blueblue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.045"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.101" />

            <TextView
                android:id="@+id/lblCodigo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center|fill_horizontal"
                android:text="CÓDIGO"
                android:textColor="@color/beige"
                android:textSize="28sp"
                app:layout_constraintBottom_toTopOf="@+id/imgProductoListVista"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.145"
                app:layout_constraintStart_toEndOf="@+id/btn_regresarlistimg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.545"
                tools:ignore="RtlSymmetry" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/lblStock"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center|fill_horizontal"
            android:text="Stock"
            android:textColor="@color/darkblue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/lblMarca"
            app:layout_constraintVertical_bias="0.093" />

        <TextView
            android:id="@+id/lblGanancia"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center|fill_horizontal"
            android:text="Ganancia"
            android:textColor="@color/darkblue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toEndOf="@+id/lblStock"

            app:layout_constraintTop_toBottomOf="@+id/lblMarca"
            app:layout_constraintVertical_bias="0.093" />

        <TextView
            android:id="@+id/lblCosto"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center|fill_horizontal"
            android:text="Costo"
            android:textColor="@color/darkblue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintStart_toEndOf="@+id/lblGanancia"

            app:layout_constraintTop_toBottomOf="@+id/lblPrecio"
            app:layout_constraintVertical_bias="0.089" />

        <TextView
            android:id="@+id/lblDescripcion"
            android:layout_width="340dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/comfortaa_regular"
            android:gravity="center|fill_horizontal"
            android:text="Descripción"
            android:textColor="@color/darkblue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblacercadescp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/lblacercadescp"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center|fill_horizontal"
            android:text="Acerca de las consolas"
            android:textColor="@color/blueblue"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblStock"
            app:layout_constraintVertical_bias="0.167" />

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Nombre"
            android:textColor="@color/redmaroon"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.143"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backgroud_agregar"
            app:layout_constraintVertical_bias="0.057" />

        <com.appbroker.roundedimageview.RoundedImageView
            android:id="@+id/lineavertical"
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:background="@color/blue"
            app:radius="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblNombre"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/lblMarca"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Marca"
            android:textColor="@color/red"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineavertical"
            app:layout_constraintVertical_bias="0.084"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/lblPrecio"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:text="$ Precio"
            android:textColor="@color/red"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.756"
            app:layout_constraintStart_toEndOf="@+id/lblMarca"
            app:layout_constraintTop_toBottomOf="@+id/lineavertical"
            app:layout_constraintVertical_bias="0.085" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>